<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #5b5f7c;
    color: #191b41;
    margin: 0;
    padding: 0;
  }

  .contact-wrapper {
    display: flex;
    flex-direction: row;
    max-width: 1100px;
    margin: 3rem auto;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0,0,0,0.08);
    overflow: hidden;
  }

  .map-section {
    width: 50%;
    min-width: 500px;
    height: 500px;
    border-right: 2px solid #c4c0bf;
  }

  .map-section iframe {
    width: 100%;
    height: 100%;
    border: 0;
  }

  .info-section {
    width: 50%;
    padding: 2rem;
    background-color: #fdfdfd;
    color: #404473;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .info-section h1 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #191b41;
  }

  .info-section p {
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .info-section a {
    color: #b39758;
    text-decoration: none;
  }

  .info-section a:hover {
    text-decoration: underline;
  }

  .info-section strong {
    color: #5b5f7c;
  }

  @media (max-width: 1000px) {
    .contact-wrapper {
      flex-direction: column;
    }

    .map-section,
    .info-section {
      width: 100%;
    }

    .map-section {
      min-height: 300px;
      border-right: none;
      border-bottom: 2px solid #c4c0bf;
    }
  }
</style>

